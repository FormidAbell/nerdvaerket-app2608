{
  "expo": {
    "name": "Nerdværket",
    "slug": "nerdvaerket",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/nerdvaerket_logo.png",
    "scheme": "nerdvaerket",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Appen bruger Bluetooth til at forbinde til iDot-3 LED skærmen.",
        "NSBluetoothPeripheralUsageDescription": "Appen bruger Bluetooth til at forbinde til iDot-3 LED skærmen.",
        "NSLocationWhenInUseUsageDescription": "Placering kræves for Bluetooth scanning på iOS."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/nerdvaerket_logo.png",
        "backgroundColor": "#000"
      },
      "edgeToEdgeEnabled": true,
      "hermes": false,
      "jsEngine": "jsc",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "package": "dk.nerdvaerket.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/nerdvaerket_logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/nerdvaerket_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
